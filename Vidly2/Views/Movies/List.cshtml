
@model IEnumerable<Vidly2.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<body class="class">    
</body>

@section scripts
{
<script>
    $(document).ready(function (){

       var table = $("#movies").DataTable({
            ajax: {
            url: "/api/movies",
            dataSrc: ""
            },
            columns: [
                {
                    data: "name",
                    render: function (data, type, movies) {
                        return "<a href = '/movies/edit" + movies.id + "'>" + movies.name + "</a>";
                    }
                },
                {
                    data : "genre.name"
                },
                {
                    data: "id",
                    render: function (data) {
                        return "<button class='btn-link js-delete' data-customer-id =" + data + ">Delete</button>";
                    }
                    
                }
            ]
        });

        $("#movies").on("click", ".js-delete", function () {
            var button = $(this);

            bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                if (result) {
                    $.ajax({
                        url: "/api/movies/" + button.attr("data-customer-id"),
                        method: "DELETE",

                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }
                        
                    });
                }
            });
        });
    });
    </script>
    }